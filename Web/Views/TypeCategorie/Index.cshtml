
@{
    ViewData["Title"] = "Type Categories";
    @model TypeCategorieViewModel
}

<div class="row">
    <div class="col-lg-12">
        <div class="page-header">
            <h1 id="forms">Liste des type catégories</h1>
        </div>
    </div>
</div>
<p>
    <a asp-action="Create">Ajouter nouveau type de catégorie</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ListTypeCategories.FirstOrDefault().Libelle)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ListTypeCategories) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Libelle)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Modifier</a>                
                <a asp-action="Delete" asp-route-id="@item.Id">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
