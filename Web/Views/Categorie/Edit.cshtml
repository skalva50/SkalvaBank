@model SkalvaBank.Domain.Categorie

@{
    ViewData["Title"] = "Modifier Catégorie";
}

<div class="row">
    <div class="col-lg-12">
        <div class="page-header">
            <h1 id="forms">Modifier Catégorie</h1>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Libelle" class="control-label"></label>
                <input asp-for="Libelle" class="form-control" />
                <span asp-validation-for="Libelle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HorsStats" class="control-label"></label>             
                @Html.CheckBoxFor(model => model.HorsStats,true)                
                <span asp-validation-for="HorsStats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTypecategorieNavigation" class="control-label"></label>
                <select asp-for="IdTypecategorie" class="form-control" asp-items="ViewBag.IdTypecategorie"></select>
                <span asp-validation-for="IdTypecategorie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
