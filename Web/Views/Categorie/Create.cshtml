@model SkalvaBank.Domain.Categorie

@{
    ViewData["Title"] = "Ajout Categorie";
}


<div class="row">
    <div class="col-lg-12">
        <div class="page-header">
            <h1 id="forms">Ajout Categorie</h1>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Libelle" class="control-label"></label>
                <input asp-for="Libelle" class="form-control" />
                <span asp-validation-for="Libelle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HorsStats" class="control-label"></label>
                 @Html.CheckBoxFor(model => model.HorsStats,true) 
                <span asp-validation-for="HorsStats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTypecategorie" class="control-label"></label>
                <select asp-for="IdTypecategorie" class ="form-control" asp-items="ViewBag.IdTypecategorie"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Ajouter" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour Ã  la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
